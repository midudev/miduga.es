.post
  margin-bottom 60px
  max-width 700px
  margin 0 auto
  &.post-list
    text-align center
  .post-title
    font-size 31px
    line-height 1.45em
    color #444
    letter-spacing -.04em
    margin-bottom 0px
    a
      color #444
  .post-excerpt
    font 18px/1.5 Georgia, Cambria, "Times New Roman", Times, serif
    color rgba(0, 0, 0, 0.8)
    padding 0
    margin 0
  .post-meta
    font 12px/1.1 -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell, "Open Sans", "Helvetica Neue", sans-serif
    color rgba(0,0,0,.44)
  .post-header
    margin-bottom 20px
  .post-read-more
    transition opacity .3s ease
    opacity .5
    padding-top 10px
    display inline-block
    &:hover
      opacity 1
  .post-content
    p, li
      font-family Georgia, Cambria, "Times New Roman", Times, serif
      font-weight 400
      font-style normal
      font-size 18px
      line-height 1.58
      letter-spacing -.003em
      color rgba(0,0,0,0.8)
    a
      color #2980b9
      border-bottom 1px dashed #2980b9
      opacity .8
      transition opacity .3s ease
      &:hover
        opacity 1
    h1, h2, h3, h4, h5
      color #444
