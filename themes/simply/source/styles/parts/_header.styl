#header
  width 100%
  background #2980b9
  text-align center
  padding 50px 0px
  position relative

#header-inside
  position relative
  z-index 2

#title
  font-family Inconsolata, Consolas, monospace
  color #fff
  margin-top 0px
  font-size 3em
  text-shadow 0px 0px 1px rgba(0, 0, 0, 0.8)

#web-description
  font 100 14px/1.5 -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell, "Open Sans", "Helvetica Neue", sans-serif
  color #fff
  word-wrap break-word
  padding 0px 20px
  a
    color #fff
    border-bottom 1px dashed #fff
    text-decoration none
    transition all .3s ease
    &:hover
      border-bottom 1px solid #fff

#logo
  size( 120px )
  background-size cover
  margin 50px auto 20px
  border 4px solid #fff
  border-radius 80px
  display inline-block

#links
  display block
  max-width 500px
  margin 0 auto
  a
    opacity .65
    transition opacity .3s ease
    &:hover
      opacity 1
  i
    margin 0 1%

.particles-js-canvas-el
  top 0px
  left 0px
  position absolute
  z-index 0
