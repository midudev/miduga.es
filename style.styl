@font-face {
  font-family: 'miduga';
  src: url('font/miduga.eot?30656483');
  src: url('font/miduga.eot?30656483#iefix') format('embedded-opentype'),
       url('font/miduga.woff?30656483') format('woff'),
       url('font/miduga.ttf?30656483') format('truetype'),
       url('font/miduga.svg?30656483#miduga') format('svg');
  font-weight: normal;
  font-style: normal;
}

i:before
  font-family: "miduga"
  font-style: normal
  font-weight: normal
  speak: none

  display: inline-block;
  text-decoration: inherit;
  width: 1em;
  margin-right: .2em;
  text-align: center;
  color: #fff
  transition opacity .3s ease
  font-size: 18px

  text-shadow 0px 0px 1px #000
  font-variant: normal
  text-transform: none

  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale

.icon-mail-alt:before { content: '\e800'; }
.icon-github-circled:before { content: '\e804'; } /* '' */
.icon-twitter:before { content: '\e805'; } /* '' */
.icon-linkedin:before { content: '\e806'; } /* '' */
.icon-medium:before { content: '\e807'; } /* '' */

body
  -webkit-font-smoothing: antialiased
  margin-top 100px
  letter-spacing .5px
  background: radial-gradient(ellipse at center, #111 0%, #222 100%)

header
  display block
  margin 0 auto
  text-align center
  max-width 600px
  width 100%

p
  font 100 1em/1.75 "Georgia", serif
  color #bbb
  text-shadow 0px 0px 1px #000

a
  color #fff
  text-decoration none

#links
  i
    margin 0px 1%

#foto
  border 0
  display block
  margin 0 auto 20px
  width 120px
  height 120px
  background url( 'miduga.png' ) no-repeat center center
  background-size cover
